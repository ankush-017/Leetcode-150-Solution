class Solution {

    boolean isalphanumeric(char ch){

        if((ch>='a' && ch<='z') || (ch>='0' && ch<='9') || (ch>='A' && ch<='Z')){
            return true;
        }

        return false;
    }

    public boolean isPalindrome(String s) {
        
        // TC: O(n) => SC: O(1)
        int n = s.length();
        int i = 0, j = n - 1;
        while(i<=j){
            if(!isalphanumeric(s.charAt(i))){
                i++;
            }
            else if(!isalphanumeric(s.charAt(j))){
                j--;
            }
            else{
                char f = Character.toLowerCase(s.charAt(i));
                char st = Character.toLowerCase(s.charAt(j));
                if(f != st) return false;
                else{
                    i++;
                    j--;
                }
            }
        }

        return true;
    }
}
