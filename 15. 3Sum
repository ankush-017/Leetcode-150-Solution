class Solution {
    public List<List<Integer>> threeSum(int[] nums) {
        
        // Approach 1: using binary search => took two element and search for third => TC: O(n^2logn) => SC: O(1)
        // Approach 2: using two pointer => optimized approach => TC: O(n^2) => SC: O(1)

        int n = nums.length;
        List<List<Integer>> ans = new ArrayList<>();
        Arrays.sort(nums);
        for(int i=0;i<n;i++){
            int j = i+1,k = n-1;
            if(i>0 && nums[i] == nums[i-1]){ // skip duplicate
                continue;
            }
            while(j<k){
                int sum = nums[i] + nums[j] + nums[k];
                if(sum > 0){ //  shift k to left
                    k--;
                }
                else if(sum < 0){ // shift j to right
                    j++;
                }
                else{
                    List<Integer> li = new ArrayList<>();
                    li.addAll(Arrays.asList(nums[i], nums[j], nums[k]));
                    ans.add(li);
                    j++;
                    while(j<k && nums[j] == nums[j-1]){
                        j++; // for not duplicate
                    }
                }
            }
        }

        return ans;
    }
}
