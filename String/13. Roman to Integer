class Solution {

    public int romanToInt(String s) {
        
        int n = s.length();
        Map<Character,Integer> mp = new HashMap<>();
        mp.put('I',1);
        mp.put('V',5);
        mp.put('X',10);
        mp.put('L',50);
        mp.put('C',100);
        mp.put('D',500);
        mp.put('M',1000);

        int ans = 0;
        int prev = 0;
        for(int i=n-1;i>=0;i--){
            int val = mp.get(s.charAt(i));
            if(val>=prev){
                ans += val;
                prev = val;
            }
            else{
                ans -= val;
                prev = val;
            }
        }

        return ans;
    }
}
