class Solution {
    public int lengthOfLastWord(String s) {
        
        int n = s.length();
        int idx = n-1;
        // we remove the space from the last in the word
        while(idx >= 0 && s.charAt(idx) == ' '){
            idx--;
        }

        int ans = 0;
        while(idx>=0 && s.charAt(idx) != ' '){
            ans++;
            idx--;
        }

        return ans;
    }
}
