class Solution {
    public int candy(int[] ratings) {
        
        int n = ratings.length;

        if(n == 1) return 1;
        int[] ans = new int[n];
        Arrays.fill(ans,1);
        // first from left to right check
        for(int i=0;i<n-1;i++){
            if(ratings[i] < ratings[i+1]){
                ans[i+1] = ans[i] + 1;
            }
        }
        // second from right to left
        for(int i=n-2;i>=0;i--){
            if(ratings[i] > ratings[i+1]){
                ans[i] = Math.max(ans[i],ans[i+1] + 1);
            }
        }

        int res = 0;
        for(int i=0;i<n;i++) res += ans[i];

        return res;
    }
}
