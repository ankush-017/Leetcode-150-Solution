class Solution {
    public int canCompleteCircuit(int[] gas, int[] cost) {
        
        // we traverse from start to end
        // if at end totalGas >= 0 the its possible to return start index 

        int n = gas.length;
        int totalGas = 0;
        int currGas = 0;
        int start = 0;
        for(int i=0;i<n;i++){
            int diff = gas[i] - cost[i];
            totalGas += diff;
            currGas += diff;
            if(currGas < 0){
                start = i+1;
                currGas = 0;
            }
        }

        return (totalGas < 0 ? -1: start);
    }
}
